{
  "author": "Ivan Alonso (@neverbot)",
  "name": "okinawa-asteroids",
  "description": "Asteroids clone using okinawa.js",
  "version": "1.0.0",
  "homepage": "http://dev.neverbot.com/okinawa.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:neverbot/okinawa-asteroids.git"
  },
  "dependencies": {
    "jshint": "^2.8.0",
    "okinawa.js": "https://github.com/neverbot/okinawa.js.git#master",
    "uglify-js": "^2.4.24"
  },
  "devDependencies": {},
  "optionalDependencies": {},
  "engines": {
    "node": "*"
  },
  "scripts": {
    "prebuild": "rm -Rf ./build/* && mkdir ./build/asteroids && npm run build:engine",
    "build": "./scripts/build.sh .",
    "build:web" : "cp ./game/index.html ./game/options.js ./game/style.css ./build/asteroids/ && cp -R ./game/fonts ./game/images ./game/sounds ./build/asteroids/",
    "build:engine": "./node_modules/okinawa.js/scripts/build.sh ./node_modules/okinawa.js/ && cp ./node_modules/okinawa.js/build/okinawa.js ./build/asteroids/okinawa.js",
    "postbuild:uglify": "uglifyjs ./build/asteroids/okinawa.js -o ./build/asteroids/okinawa.min.js && uglifyjs ./build/asteroids/okinawa-asteroids.js -o ./build/asteroids/okinawa-asteroids.min.js",
    "postbuild":"npm run postbuild:uglify && npm run build:web"
  }
}
