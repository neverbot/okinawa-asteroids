{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module"
  },
  "globals": {},
  "extends": "eslint:recommended",
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-console": 0,
    "object-curly-spacing": ["error", "always"],
    "block-spacing": ["error", "always"],
    "no-trailing-spaces": 1,
    "no-multi-spaces": 1,
    "comma-spacing": [2, { "before": false, "after": true }]
  }
}
